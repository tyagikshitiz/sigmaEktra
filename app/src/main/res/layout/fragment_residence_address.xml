<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ResidenceAddressFragment">
    <TextView
        android:id="@+id/tv_resedence_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#0D0D0D"
        android:fontFamily="@font/robotobold"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:text="@string/tvDistrictPresent"
        />
    <EditText
        android:id="@+id/et_district_present"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_resedence_address"
        android:layout_marginTop="6dp"
        android:hint="@string/etDistrictPresent"
        android:textSize="14sp"
        android:paddingTop="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:background="@drawable/rectangle"

        />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="22dp"
        app:layout_constraintRight_toRightOf="@id/et_district_present"
        android:layout_marginRight="13dp"
        app:layout_constraintTop_toTopOf="@id/et_district_present"
        app:layout_constraintBottom_toBottomOf="@id/et_district_present"
        android:src="@mipmap/location_select"
        />
    <TextView
        android:id="@+id/tv_district_permanent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  app:layout_constraintTop_toBottomOf="@id/et_district_present"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#0D0D0D"
        android:fontFamily="@font/robotobold"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:text="@string/tvDistrictPermanent"
        />
    <EditText
        android:id="@+id/et_district_permanent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_district_permanent"
        android:layout_marginTop="6dp"
        android:hint="@string/etDistrictPresent"
        android:textSize="14sp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:paddingTop="17dp"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:background="@drawable/rectangle"

        />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="22dp"
        app:layout_constraintRight_toRightOf="@id/et_district_permanent"
        android:layout_marginRight="13dp"
        app:layout_constraintTop_toTopOf="@id/et_district_permanent"
        app:layout_constraintBottom_toBottomOf="@id/et_district_permanent"
        android:src="@mipmap/location_select"
        />
    <TextView
        android:id="@+id/tv_details_next_light_district"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_district_permanent"
        android:layout_marginTop="294dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#21317B"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/tvDetailsNext"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"
        />
    <TextView
        android:id="@+id/tv_details_next_light_district1"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/et_district_permanent"
        android:layout_marginTop="294dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#878CA5"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/tvDetailsNext"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.WelcomeFragment">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="171dp"
        android:layout_height="171dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:src="@mipmap/splash"
        />


    <TextView
        android:id="@+id/btn_phone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:text="@string/buttonPhone"
        android:gravity="center"
        android:backgroundTint="#21317B"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingRight="60dp"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />
    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/ic_phone"
        app:layout_constraintTop_toTopOf="@id/btn_phone"
        app:layout_constraintBottom_toBottomOf="@id/btn_phone"
        android:background="@color/white"
        android:layout_marginLeft="4dp"
        />

    <ImageView
        android:id="@+id/ic_phone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_phone"
        app:layout_constraintTop_toTopOf="@id/btn_phone"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_phone"
        android:src="@mipmap/ic_mobile"

/>
    <TextView
        android:id="@+id/btn_google"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle"
        android:text="@string/buttonGoogle"
        android:gravity="center"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingRight="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_phone" />

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/ic_google"
        app:layout_constraintTop_toTopOf="@id/btn_google"
        app:layout_constraintBottom_toBottomOf="@id/btn_google"
        android:background="#8D98A1"
        android:layout_marginLeft="6dp"
        />


    <ImageView
        android:id="@+id/ic_google"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_google"
        app:layout_constraintTop_toTopOf="@id/btn_google"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_google"
        android:src="@mipmap/ic_google_logo"

        />

    <TextView
        android:id="@+id/btn_facebook"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle"
        android:text="@string/buttonFacebook"
        android:gravity="center"
        android:backgroundTint="#3B5998"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingRight="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_google" />

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/ic_facebook"
        app:layout_constraintTop_toTopOf="@id/btn_facebook"
        app:layout_constraintBottom_toBottomOf="@id/btn_facebook"
        android:background="@color/white"
        android:layout_marginLeft="6dp"
        />

    <ImageView
        android:id="@+id/ic_facebook"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_facebook"
        app:layout_constraintTop_toTopOf="@id/btn_facebook"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_facebook"
        android:src="@mipmap/ic_signin_facebook"

        />

    <TextView
        android:id="@+id/btn_apple"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle"
        android:text="@string/buttonApple"
        android:gravity="center"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingRight="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_facebook" />

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/ic_apple"
        app:layout_constraintTop_toTopOf="@id/btn_apple"
        app:layout_constraintBottom_toBottomOf="@id/btn_apple"
        android:background="@color/white"
        android:layout_marginLeft="6dp"
        />

    <ImageView
        android:id="@+id/ic_apple"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_apple"
        app:layout_constraintTop_toTopOf="@id/btn_apple"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_apple"
        android:src="@mipmap/ic_apple"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
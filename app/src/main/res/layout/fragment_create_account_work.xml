<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
 <variable
     name="component"
     type="com.trainee.appinventiv.sigmaekatra.ui.CreateAccountWorkFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".ui.CreateAccountWorkFragment">


            <TextView
                android:id="@+id/tv_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"
                android:textSize="13sp"
                android:text="Education"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1" />

            <Spinner
                android:id="@+id/tv_spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_education"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:autofillHints="@string/tvSpinner"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="7dp"
                app:layout_constraintRight_toRightOf="@id/tv_spinner"
                app:layout_constraintTop_toTopOf="@id/tv_spinner"
                app:layout_constraintBottom_toBottomOf="@id/tv_spinner"
                android:layout_marginRight="13dp"
                android:src="@mipmap/ic_arrow" />

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_spinner"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvExperience"
                android:textSize="13sp"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1"

                />

            <TextView
                android:id="@+id/tv_Work_Experience"
                android:layout_width="165dp"
                android:layout_height="54dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_experience"
                android:layout_marginTop="7dp"
                android:text="@string/tvWorkExerience"
                android:textSize="16dp"
                android:paddingRight="12dp"
                android:fontFamily="@font/robotobold"
                android:gravity="center"
                android:textColor="#8D98A1"

                android:background="@drawable/custom_gender" />

            <ImageView
                android:id="@+id/iv_work_experience"
                android:layout_width="17dp"
                android:layout_height="17dp"
                app:layout_constraintTop_toTopOf="@id/tv_Work_Experience"
                app:layout_constraintBottom_toBottomOf="@id/tv_Work_Experience"
                app:layout_constraintLeft_toLeftOf="@id/tv_Work_Experience"
                android:background="@drawable/selector_work"
                android:src="@mipmap/ic_work"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/tv_Work_Experience_no"
                android:layout_width="165dp"
                android:layout_height="54dp"
                app:layout_constraintRight_toRightOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_experience"
                android:layout_marginTop="7dp"
                android:text="@string/tvWorkExerienceNo"
                android:textSize="16dp"
                android:paddingRight="12dp"
                android:fontFamily="@font/robotobold"
                android:gravity="center"
                android:textColor="#8D98A1"

                android:background="@drawable/custom_gender" />

            <ImageView
                android:id="@+id/iv_work_experience_no"
                android:layout_width="17dp"
                android:layout_height="17dp"
                app:layout_constraintTop_toTopOf="@id/tv_Work_Experience_no"
                app:layout_constraintBottom_toBottomOf="@id/tv_Work_Experience_no"
                app:layout_constraintLeft_toLeftOf="@id/tv_Work_Experience_no"
                android:background="@drawable/selector_work"
                android:src="@mipmap/ic_work"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/tv_experience1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_Work_Experience"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvExperience"
                android:textSize="13sp"
                android:visibility="invisible"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1"

                />

            <Spinner
                android:id="@+id/tv_spinner1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_experience1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_dropdown"
                android:layout_width="13dp"
                android:layout_height="7dp"
                app:layout_constraintRight_toRightOf="@id/tv_spinner1"
                app:layout_constraintTop_toTopOf="@id/tv_spinner1"
                app:layout_constraintBottom_toBottomOf="@id/tv_spinner1"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:layout_marginRight="13dp"
                android:src="@mipmap/ic_arrow" />

            <TextView
                android:id="@+id/tv_privious_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_spinner1"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvPriviousSalary"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:textSize="13sp"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1"

                />

            <EditText
                android:id="@+id/et_enter_salary"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_privious_salary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15dp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_experience2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/et_enter_salary"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvExperience"
                android:textSize="13sp"
                android:visibility="gone"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1"

                />


            <Spinner
                android:id="@+id/tv_spinner2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_experience2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_dropdown1"
                android:layout_width="13dp"
                android:layout_height="7dp"
                app:layout_constraintRight_toRightOf="@id/tv_spinner2"
                app:layout_constraintTop_toTopOf="@id/tv_spinner2"
                app:layout_constraintBottom_toBottomOf="@id/tv_spinner2"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginRight="13dp"
                android:src="@mipmap/ic_arrow" />

            <TextView
                android:id="@+id/tv_privious_salary1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_spinner2"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvPriviousSalary"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:textSize="13sp"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1"

                />

            <EditText
                android:id="@+id/et_enter_salary1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_privious_salary1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/add_another"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/et_enter_salary"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/et_enter_salary"
                android:text="Add Another"
                android:fontFamily="@font/robotobold"
                android:visibility="invisible"
                android:textColor="#21317B" />

            <TextView
                android:id="@+id/tv_prefered_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/et_enter_salary1"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvPreferedLocation"
                android:textSize="13sp"
                android:visibility="gone"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1" />

            <Spinner
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_prefered_location"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_dropdown_location"
                android:layout_width="13dp"
                android:layout_height="7dp"
                app:layout_constraintRight_toRightOf="@id/tv_location"
                app:layout_constraintTop_toTopOf="@id/tv_location"
                app:layout_constraintBottom_toBottomOf="@id/tv_location"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginRight="13dp"
                android:src="@mipmap/ic_arrow" />

            <TextView
                android:id="@+id/tv_next_yes"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_location"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#21317B"
                android:text="@string/tvNext"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/et_enter_salary1"
                app:layout_constraintTop_toBottomOf="@id/et_enter_salary1"
                android:text="Remove "
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotobold"
                android:visibility="gone"
                android:textColor="#21317B" />


            <TextView
                android:id="@+id/tv_expected_salary1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_Work_Experience"
                android:paddingLeft="15dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:text="@string/tvPriviousSalary"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1"

                />

            <EditText
                android:id="@+id/et_expected_salary1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_expected_salary1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_job_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner_no"
                app:layout_constraintTop_toBottomOf="@id/et_expected_salary1"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvJobCategory"
                android:textSize="13sp"
                android:visibility="gone"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1"

                />

            <Spinner
                android:id="@+id/tv_spinner_no"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_job_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_dropdown_no"
                android:layout_width="13dp"
                android:layout_height="7dp"
                app:layout_constraintRight_toRightOf="@id/tv_spinner_no"
                app:layout_constraintTop_toTopOf="@id/tv_spinner_no"
                app:layout_constraintBottom_toBottomOf="@id/tv_spinner_no"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginRight="13dp"
                android:src="@mipmap/ic_arrow" />

            <TextView
                android:id="@+id/tv_prefered_location_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_spinner_no"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvPreferedLocation"
                android:textSize="13sp"
                android:visibility="gone"
                android:fontFamily="@font/robotomedium"
                android:textColor="#8D98A1" />

            <Spinner
                android:id="@+id/tv_location_no"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_prefered_location_no"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="15dp"
                android:fontFamily="@font/robotomedium"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_dropdown_location_no"
                android:layout_width="13dp"
                android:layout_height="7dp"
                app:layout_constraintRight_toRightOf="@id/tv_location_no"
                app:layout_constraintTop_toTopOf="@id/tv_location_no"
                app:layout_constraintBottom_toBottomOf="@id/tv_location_no"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginRight="13dp"
                android:src="@mipmap/ic_arrow" />

            <TextView
                android:id="@+id/tv_next_no"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_location_no"
                android:backgroundTint="#21317B"
                android:text="@string/tvNext"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
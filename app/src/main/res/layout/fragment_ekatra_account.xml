<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.EkatraAccountFragment">
    <ImageView
        android:id="@+id/iv_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="157dp"
        android:src="@mipmap/ic_lets_start_image"
        />
    <ImageView
        android:id="@+id/iv_back_ekatra"
        android:layout_width="26dp"
        android:layout_height="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/ic_back"
        />
    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/iv_create_account"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="#21317B"
        android:textSize="22sp"
        android:text="@string/tvCreateAccount"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_help_hr"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_create_account"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textColor="#8D98A1"
        android:text="@string/tvHelpsHr"
        />
    <TextView
        android:id="@+id/tv_lets_start"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_help_hr"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#21317B"
        android:text="@string/tvLetsStart"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>


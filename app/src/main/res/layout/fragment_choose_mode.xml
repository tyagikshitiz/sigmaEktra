<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ChooseModeFragment">

<TextView
    android:id="@+id/tv_choose_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="60dp"
    android:textColor="#0E0E0E"
    android:textSize="22sp"
    android:textStyle="bold"
    android:text="@string/tvChooseCategory"
    />
    <ImageView
        android:id="@+id/iv_choose_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_category"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_choose_category"
        />
    <TextView
        android:id="@+id/tv_radio1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/iv_choose_category"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/tvRadio1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="16dp"
        android:textColor="#0E0E0E"
        android:textStyle="bold"
        android:background="@drawable/choose_category_rectangle"
        app:layout_constraintRight_toRightOf="parent"
 >
    </TextView>

    <TextView
        android:id="@+id/tv_radio2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/tv_radio1"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/tvRadio2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="16dp"
        android:textColor="#0E0E0E"
        android:textStyle="bold"
        android:background="@drawable/choose_category_rectangle"
        app:layout_constraintRight_toRightOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/tv_radio3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/tv_radio2"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/tvRadio3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="16dp"
        android:textColor="#0E0E0E"
        android:textStyle="bold"
        android:background="@drawable/choose_category_rectangle"
        app:layout_constraintRight_toRightOf="parent"
        >
    </TextView>

<RadioGroup
    android:id="@+id/radio_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@id/tv_radio1"
    app:layout_constraintRight_toRightOf="@id/tv_radio1"
    android:orientation="vertical"

  >

    <RadioButton
        android:id="@+id/btn_radio1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:checked="false"
            app:layout_constraintRight_toRightOf="@id/tv_radio1"
            app:layout_constraintTop_toTopOf="@id/tv_radio1"
            app:layout_constraintBottom_toBottomOf="@id/tv_radio1"
       android:buttonTint="#21317B"
    />
        <RadioButton
            android:id="@+id/btn_radio2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:checked="false"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="@id/tv_radio2"
            app:layout_constraintTop_toTopOf="@id/tv_radio2"
            app:layout_constraintBottom_toBottomOf="@id/tv_radio2"
            android:buttonTint="#21317B"
            />
        <RadioButton
            android:id="@+id/btn_radio3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:checked="false"
            app:layout_constraintRight_toRightOf="@id/tv_radio3"
            app:layout_constraintTop_toTopOf="@id/tv_radio3"
            app:layout_constraintBottom_toBottomOf="@id/tv_radio3"
            android:buttonTint="#21317B"
            />
</RadioGroup>
    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/radio_group"
        android:backgroundTint="#21317B"
        android:text="@string/tvNext"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginFragment">
<ImageView
    android:id="@+id/iv_back"
    android:layout_width="25dp"
    android:layout_height="25dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp"
    android:src="@mipmap/ic_back"

    />
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        android:text="@string/imageLogin"
        android:textSize="25sp"
        android:textColor="#0D0D0D"
        android:textStyle="bold"

        />
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login"
        android:src="@mipmap/logoekatra"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/tv_enter_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="65dp"
        android:text="@string/tvPhoneNo"
        android:textSize="16dp"
        android:textColor="#0E0E0E"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_countrycode"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_enter_no"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_no"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle"
        />
    <ImageView
        android:id="@+id/iv_india"
        android:layout_width="23dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_countrycode"
        app:layout_constraintTop_toTopOf="@id/tv_countrycode"
        app:layout_constraintBottom_toBottomOf="@id/tv_countrycode"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/ic_india"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_india"
        app:layout_constraintRight_toRightOf="@id/tv_countrycode"
        app:layout_constraintTop_toTopOf="@id/tv_countrycode"
        app:layout_constraintBottom_toBottomOf="@id/tv_countrycode"
        android:text="@string/tvCountryCode"
        android:textColor="#171717"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/et_phone_no"
        android:layout_width="0dp"
        android:layout_height="50dp"
      app:layout_constraintLeft_toRightOf="@id/tv_countrycode"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_no"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:maxLength="10"
        android:background="@drawable/rectangle"
        android:hint="@string/etPhoneNumber"
        android:paddingLeft="16dp"
        android:inputType="phone"
        android:textColor="@color/black"
     
        />
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="375dp"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_phone_no"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#21317B"
        android:visibility="invisible"
        android:text="@string/tvSubmit"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"
        />
    <TextView
        android:id="@+id/tv_submit1"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_phone_no"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#878CA5"
        android:text="@string/tvSubmit"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"
        />

    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_submit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="17dp"
    app:layout_constraintRight_toLeftOf="@id/tv_condition"
        android:layout_marginRight="5dp"
        android:text="@string/tvTerms"
        android:textSize="15dp"

        />
    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     app:layout_constraintLeft_toRightOf="@id/tv_terms"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_submit"
        android:layout_marginTop="30dp"
        android:paddingLeft="-1dp"
        android:text="@string/tvCondition"
        android:layout_marginLeft="2dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tv_and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_condition"
        android:layout_marginTop="2dp"
        android:layout_marginRight="90dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/tvAnd"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_and"
        app:layout_constraintTop_toBottomOf="@id/tv_condition"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/tvPrivacy"
        android:textSize="15dp"

/>



</androidx.constraintlayout.widget.ConstraintLayout>
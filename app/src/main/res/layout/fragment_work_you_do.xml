<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.WorkYouDoFragment">

    <TextView
        android:id="@+id/tv_kind_of_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/robotobold"
        android:textSize="18sp"
        android:paddingBottom="5dp"
        android:text="What kind of work are you looking for? "
        />

    <TextView
        android:id="@+id/tv_jobs_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/tv_kind_of_work"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#21317B"
        android:fontFamily="@font/robotobold"
        android:textSize="14sp"
        android:paddingBottom="5dp"
         android:text="@string/tvJobsAvailable"
        />
    <androidx.cardview.widget.CardView
  android:id="@+id/cv_cardview1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_jobs_available"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Construction Labor"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/robotobold"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/container1"
                app:layout_constraintBottom_toBottomOf="@id/container1"
                android:paddingLeft="5dp"
                android:textSize="16sp"
                android:buttonTint="#21317B"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cardview2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_cardview1"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CheckBox
                android:id="@+id/checkbox2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Call Center Operator"
                android:fontFamily="@font/robotobold"
                android:gravity="center_vertical"
                android:layout_marginLeft="18dp"
                app:layout_constraintTop_toTopOf="@id/container2"
                app:layout_constraintBottom_toBottomOf="@id/container2"
                android:paddingLeft="5dp"
                android:textSize="16sp"

                android:buttonTint="#21317B"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cardview3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_cardview2"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CheckBox
                android:id="@+id/checkbox3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Food Delivery"
                android:fontFamily="@font/robotobold"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/container3"
                app:layout_constraintBottom_toBottomOf="@id/container3"
                android:paddingLeft="5dp"
                android:layout_marginLeft="18dp"
                android:textSize="16sp"
                android:buttonTint="#21317B"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cardview4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_cardview3"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CheckBox
                android:id="@+id/checkbox4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Call Center Operator"
                android:fontFamily="@font/robotobold"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/container4"
                app:layout_constraintBottom_toBottomOf="@id/container4"
                android:paddingLeft="5dp"
                android:textSize="16sp"
                android:buttonTint="#21317B"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cardview5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_cardview4"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CheckBox
                android:id="@+id/checkbox5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Food Delivery"
                android:fontFamily="@font/robotobold"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/container5"
                app:layout_constraintBottom_toBottomOf="@id/container5"
                android:paddingLeft="5dp"
                android:layout_marginLeft="18dp"
                android:textSize="16sp"
                android:buttonTint="#21317B"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_next_work_you_do"
        android:layout_width="375dp"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_cardview5"
        android:layout_marginTop="100dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#21317B"
        android:text="@string/tvDetailsNext"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>